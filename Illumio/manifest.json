{
    "name": "Illumio",
    "id": "Illumio",
    "version": "1.0.0",
    "description": "This plugin pulls ip addresses for the desired labels from Illumio PCE",
    "patch_supported": true,
    "push_supported": true,
    "configuration": [
        {
            "label": "PCE URL https://my.pce.com",
            "key": "api_url",
            "type": "text",
            "default": "",
            "mandatory": true,
            "description": "PCE url Address"
        },
        {
            "label": "Port",
            "key": "api_port",
            "type": "number",
            "default": 443,
            "mandatory": true,
            "description": "PCE API Port Number."
        },
        {
            "label": "API Authentication Username",
            "key": "api_username",
            "type": "text",
            "default": "",
            "mandatory": true,
            "description": "PCE API Username"
        },
        {
            "label": "API Secret",
            "key": "api_password",
            "type": "password",
            "default": "",
            "mandatory": true,
            "description": "PCE API Password"
        },
        {
            "label": "Organization ID",
            "key": "org_id",
            "type": "number",
            "mandatory": true,
            "default": 1,
            "description": "Organization ID"
        },
        {
            "label": "Label Scope - loc:quarantine, app:monitoring, env:prod, role:jumpbox",
            "key": "label_scope",
            "type": "text",
            "mandatory": true,
            "default": "loc:quarantine",
            "description": "Desired label scope in defined format"
        }
    ]
}

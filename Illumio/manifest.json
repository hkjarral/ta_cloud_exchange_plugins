{
  "name": "Illumio",
  "description": "This plugin pulls lables of choice from Illumio PCE",
  "id": "illumio",
  "version": "1.0.0",
  "pulling_supported": true,
  "receiving_supported": true,
  "configuration": [
    {
      "label": "Authentication",
      "name": "auth",
      "type": "step",
      "fields": [
        {
          "label": "PCE URL",
          "key": "url",
          "type": "text",
          "default": "",
          "mandatory": true,
          "description": "PCE instance URL."
        },
        {
          "label": "API Username",
          "key": "username",
          "type": "text",
          "default": "",
          "mandatory": true,
          "description": "API username."
        },
        {
          "label": "API Password",
          "key": "password",
          "type": "password",
          "default": "",
          "mandatory": true,
          "description": "API password."
        }
      ]
    },
    {
      "label": "Configuration Parameters",
      "name": "params",
      "type": "step",
      "fields": [
        {
          "label": "Organization ID",
          "key": "org",
          "type": "text",
          "default": "",
          "mandatory": true,
          "description": "Organization ID"
          ],
          "label": "label_id",
          "key": "label",
          "type": "text",
          "default": "quarantine",
          "mandatory": true,
          "description": "Label ID to pull"
        }
      ]
    }
  ]
}

{
    "name": "Illumio",
    "id": "Illumio",
    "version": "1.0.0",
    "description": "This plugin pulls labels from Illumio PCE",
    "patch_supported": true,
    "push_supported": true,
    "configuration": [
        {
            "label": "PCE URL",
            "key": "api_url",
            "type": "text",
            "default": "",
            "mandatory": true,
            "description": "Illumio API Base URL."
        },
        {
            "label": "API Username",
            "key": "auth_username",
            "type": "text",
            "default": "",
            "mandatory": true,
            "description": "Illumio API Username"
        },
        {
            "label": "API PAssword",
            "key": "auth_password",
            "type": "password",
            "default": "",
            "mandatory": true,
            "description": "Illumio API password"
        },
        {
            "label": "Type of Threat IoC",
            "key": "threat_type",
            "type": "choice",
            "choices": [
                {
                    "key": "Both",
                    "value": "Both"
                },
                {
                    "key": "Malware",
                    "value": "File"
                },
                {
                    "key": "URL",
                    "value": "URL"
                }
            ],
            "mandatory": true,
            "default":"Both",
            "description": "Type of threat IoC you want to pull from ThreatConnect."
        },
        {
            "label": "Enable Tagging",
            "key": "enable_tagging",
            "type": "choice",
            "choices": [
                {
                    "key": "Yes",
                    "value": "Yes"
                },
                {
                    "key": "No",
                    "value": "No"
                }
            ],
            "default": "No",
            "mandatory": false,
            "description": "Enable/Disable tagging functionality."
        },
        {
            "label": "Enable Polling",
            "key": "is_pull_required",
            "type": "choice",
            "choices": [
                {
                    "key": "Yes",
                    "value": "Yes"
                },
                {
                    "key": "No",
                    "value": "No"
                }
            ],
            "default": "Yes",
            "mandatory": false,
            "description": "Enable/Disable polling data from ThreatConnect."
        },
        {
            "label": "Initial Range (in days)",
            "key": "days",
            "type": "number",
            "mandatory": false,
            "default": 7,
            "description": "Number of days to pull the data for the initial run."
        }
    ]
}
